	},
	"bin": [
		"framework/yiic"
	],
	"archive": {
		"exclude": [
			"demos"
		]
	},
	"require": {
		"php": ">=5.1.0"
	},
	"suggest": {
		"ext-mcrypt": "Required by encrypt and decrypt methods of CSecurityManager",
		"phpseclib/mcrypt_compat": "To provide mcrypt polyfill when extension is unavailable"
	},
	"autoload": {
		"classmap" : [
			"framework/YiiBase.php",
			"framework/yii.php"
		]
	},
	"require-dev": {
		"cweagans/composer-patches": "*",
		"phpunit/phpunit": "4.8.34",
		"phpunit/phpunit-selenium": "~2.0.0",
		"phing/phing": "2.*",
		"phpseclib/mcrypt_compat": "^1.0",
		"pear/archive_tar": "~1.4.6"
	},
	"extra": {
		"composer-exit-on-patch-failure": true,
		"patches": {
			"phpunit/phpunit-mock-objects": {
				"Fix PHP 7 and 8 compatibility": "./tests/phpunit_mock_objects.patch"
			},
			"phpunit/phpunit": {
				"Fix PHP 7 compatibility": "./tests/phpunit_php7.patch",
				"Fix PHP 8 compatibility": "./tests/phpunit_php8.patch"
			}
		}
	}
}
